{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "rootDir": ".",
    "baseUrl": "src",
    "paths": {
      "#/*": ["*"],
      "#types/*": ["types/*"]
    },

    "sourceMap": true,
    "noEmit": true
  },
  "include": ["src", "tests"],
  "exclude": ["dist", "node_modules"]
}
